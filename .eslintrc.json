{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": "off"
  },
  "env": {
    "browser": false,
    "es2022": true
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "*.js"
  ],
  "overrides": [
    {
      "files": ["src/extension.ts", "src/global.d.ts"],
      "parserOptions": {
        "project": "./tsconfig.extension.json"
      },
      "env": {
        "browser": false,
        "node": false
      }
    },
    {
      "files": ["src/cli.ts"],
      "parserOptions": {
        "project": "./tsconfig.cli.json"
      },
      "env": {
        "node": true
      }
    }
  ]
}
