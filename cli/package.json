{
  "name": "window-commands-cli",
  "version": "1.0.0",
  "description": "CLI tool and desktop file generator for window-commands extension",
  "type": "module",
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --outfile=dist/cli.js --format=esm --target=es2022 --platform=node --banner:js='#!/usr/bin/env node'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "window-commands-common": "*"
  },
  "devDependencies": {
    "@types/node": "^25.0.3"
  }
}
