{
  "name": "window-commands-cli",
  "version": "1.0.0",
  "description": "CLI tool and desktop file generator for window-commands extension",
  "type": "module",
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --outfile=dist/cli.js --format=esm --target=es2022 --platform=node --banner:js='#!/usr/bin/env node'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "window-commands-extension": "*"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0"
  }
}
